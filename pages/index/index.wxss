/**index.wxss**/
page{
  background: #2E153F;
}
button{
  width:50%;
  margin-top:20rpx;
}
.show{
  width:85%;
  padding:20rpx;
  background:#eee;
  margin: 20rpx auto;
  border-radius:6px;
  display: flex;
}
.left image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  display: 1;
}
.left .nick{
  font-size:12px;
  color:#333;
  text-align: center;
  margin-top:10rpx;
  background: #fff;
  border-radius: 5rpx;
}
.right{
  flex:2;
  padding-left:30rpx;
}
.right .con{
  font-size:16px;
  margin-bottom:40rpx;
  line-height: 30px;
  color:#333;
}
.right .pic image{
  width: 230rpx;
  float:left;
  margin-right:10rpx;
  border-radius: 6px;
  margin-bottom: 10rpx;
}
.left{
  position: relative;
  margin-right: 30rpx;
}
.left .time{
  position: absolute;
  bottom: 5rpx;
  width: 120rpx;
  /* background: white; */
  border-radius: 3px;
  font-size: 14rpx;
  color: #2E153F;
}
